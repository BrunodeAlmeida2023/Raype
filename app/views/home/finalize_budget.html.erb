<% content_for :body_class, "orange-bg" %>

<header class="home-header">
  <div class="home-header-left">
    <div class="home-header-logo">
      <img src="/Logo.png" alt="Raype Logo" class="header-logo-img">
    </div>
    <h1>RAYPE</h1>
  </div>
  <nav class="home-nav">
    <%= link_to "Voltar", root_path, class: "home-nav-btn" %>
  </nav>
</header>

<div class="content-wrap">
  <section class="home-services">
    <h1 class="home-services-title">Qual Data?</h1>

    <% if @outdoor&.outdoor_type == 'triedo' %>
      <div class="triedo-warning-alert">
        <div class="triedo-warning-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
        </div>
        <div class="triedo-warning-content">
          <strong>Atenção - Outdoor Triedo:</strong>
          <p>O outdoor triedo possui um tempo mínimo de <strong>5 dias úteis</strong> para fabricação e instalação após a confirmação do pagamento.</p>
        </div>
      </div>
    <% end %>

    <%= form_with url: post_find_date_home_path, method: :post, class: "home-form-container", id: "date-form" do |f| %>
      <div class="home-form-content">
        <div class="home-form-group">
          <%= f.label :selected_start_date, "Data Inicial:", class: "home-form-label" %>
          <%= f.date_field :selected_start_date,
                           value: @outdoor&.selected_start_date,
                           class: "home-form-input",
                           required: true,
                           id: "start_date",
                           min: Date.today.to_s %>
        </div>

        <div class="home-form-group">
          <%= f.label :selected_end_date, "Data Final:", class: "home-form-label" %>
          <%= f.date_field :selected_end_date,
                           value: @outdoor&.selected_end_date,
                           class: "home-form-input",
                           required: true,
                           id: "end_date",
                           min: (Date.today + 1.month).to_s %>
        </div>

        <p class="home-form-hint">* A data final deve ser no mínimo 1 mês após a data inicial.</p>

        <div class="home-form-actions">
          <%= f.submit "Confirmar Data", class: "home-submit-btn" %>
        </div>
      </div>
    <% end %>
  </section>
</div>

