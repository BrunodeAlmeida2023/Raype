<% content_for :title, "Cadastro - Raype" %>
<div class="auth-container">
  <%= render "devise/shared/auth_branding" %>

  <div class="auth-right-panel">
    <div class="auth-form-container">

      <div class="auth-tabs">
        <%= link_to "Entrar", new_user_session_path, class: "auth-tab" %>
        <%= link_to "Cadastrar", new_user_registration_path, class: "auth-tab active" %>
      </div>

      <%= render "devise/shared/flash_messages" %>

      <div class="auth-form-header">
        <h2>Criar Conta</h2>
        <p>Preencha os dados para se cadastrar</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="auth-input-group">
          <%= f.label :email, "E-mail" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "seu@email.com" %>
        </div>

        <div class="auth-input-group">
          <%= f.label :password, "Senha" %>
          <div class="auth-password-wrapper">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mínimo 6 caracteres", class: "auth-password-field" %>
            <button type="button" class="auth-password-toggle" aria-label="Mostrar senha">
              <svg class="eye-icon eye-closed" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              <svg class="eye-icon eye-open" style="display: none;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                <line x1="1" y1="1" x2="23" y2="23"></line>
              </svg>
            </button>
          </div>
          <% if @minimum_password_length %>
            <small class="form-text">
              (<%= @minimum_password_length %> caracteres no mínimo)
            </small>
          <% end %>
        </div>

        <div class="auth-input-group">
          <%= f.label :password_confirmation, "Confirmar Senha" %>
          <div class="auth-password-wrapper">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repita a senha", class: "auth-password-field" %>
            <button type="button" class="auth-password-toggle" aria-label="Mostrar senha">
              <svg class="eye-icon eye-closed" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              <svg class="eye-icon eye-open" style="display: none;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                <line x1="1" y1="1" x2="23" y2="23"></line>
              </svg>
            </button>
          </div>
        </div>

        <div class="auth-input-group">
          <%= f.label :documento_numero, "Documento" %>
          <div class="auth-documento-row">
            <div class="auth-input-wrapper">
              <%= f.text_field :documento_numero,
                  placeholder: "Digite seu documento",
                  id: "documento_numero_input" %>
            </div>
            <div class="auth-select-wrapper">
              <%= f.select :documento_tipo,
                  [['CPF', 'cpf'], ['CNPJ', 'cnpj']],
                  {},
                  { id: "documento_tipo_select" } %>
            </div>
          </div>
        </div>

        <%= f.submit "Criar Conta", class: "auth-btn-submit" %>
      <% end %>

      <div class="auth-form-footer">
        <p>Já tem uma conta? <%= link_to "Entrar", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>

