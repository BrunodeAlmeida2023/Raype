<% content_for :title, "Cadastro - Raype" %>
<div class="auth-container">
  <%= render "devise/shared/auth_branding" %>

  <div class="auth-right-panel">
    <div class="auth-form-container">

      <div class="auth-tabs">
        <%= link_to "Entrar", new_user_session_path, class: "auth-tab" %>
        <%= link_to "Cadastrar", new_user_registration_path, class: "auth-tab active" %>
      </div>

      <%= render "devise/shared/flash_messages" %>

      <div class="auth-form-header">
        <h2>Criar Conta</h2>
        <p>Preencha os dados para se cadastrar</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="auth-input-group">
          <%= f.label :email, "E-mail" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "seu@email.com" %>
        </div>

        <div class="auth-input-group">
          <%= f.label :password, "Senha" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mínimo 6 caracteres" %>
          <% if @minimum_password_length %>
            <small class="form-text">
              (<%= @minimum_password_length %> caracteres no mínimo)
            </small>
          <% end %>
        </div>

        <div class="auth-input-group">
          <%= f.label :password_confirmation, "Confirmar Senha" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repita a senha" %>
        </div>

        <div class="auth-input-group">
          <%= f.label :documento_numero, "Documento" %>
          <div class="auth-documento-row">
            <div class="auth-input-wrapper">
              <%= f.text_field :documento_numero,
                  placeholder: "Digite seu documento",
                  id: "documento_numero_input" %>
            </div>
            <div class="auth-select-wrapper">
              <%= f.select :documento_tipo,
                  [['CPF', 'cpf'], ['CNPJ', 'cnpj']],
                  {},
                  { id: "documento_tipo_select" } %>
            </div>
          </div>
        </div>

        <%= f.submit "Criar Conta", class: "auth-btn-submit" %>
      <% end %>

      <div class="auth-form-footer">
        <p>Já tem uma conta? <%= link_to "Entrar", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>

