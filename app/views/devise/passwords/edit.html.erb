<% content_for :title, "Redefinir Senha - Raype" %>
<div class="auth-container">
  <%= render "devise/shared/auth_branding" %>

  <div class="auth-right-panel">
    <div class="auth-form-container">

      <%= render "devise/shared/flash_messages" %>

      <div class="auth-form-header">
        <h2>Nova Senha</h2>
        <p>Digite sua nova senha</p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="auth-input-group">
          <%= f.label :password, "Nova Senha" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Mínimo 6 caracteres" %>
          <% if @minimum_password_length %>
            <small class="form-text">
              (<%= @minimum_password_length %> caracteres no mínimo)
            </small>
          <% end %>
        </div>

        <div class="auth-input-group">
          <%= f.label :password_confirmation, "Confirmar Nova Senha" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repita a senha" %>
        </div>

        <%= f.submit "Alterar senha", class: "auth-btn-submit" %>
      <% end %>

      <div class="auth-form-footer">
        <p><%= link_to "Voltar para login", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>

